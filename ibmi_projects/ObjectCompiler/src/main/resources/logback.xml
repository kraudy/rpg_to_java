<configuration>
  <!-- Console appender -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Root logger (applies to all classes) -->
  <root level="INFO"> <!-- Change to DEBUG for more verbosity -->
    <appender-ref ref="CONSOLE" />
  </root>

  <!-- Optional: Set specific levels for packages -->
  <logger name="com.github.kraudy.compiler" level="DEBUG" />
</configuration>